       /> -->
      
      
      <RelativeLayout
          android:id="@+id/mana_display"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_layout" >

           <ProgressBar
	          android:id="@+id/mana0"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:progress="50"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana1"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana0"
	          android:progress="75"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana2"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana1"
	          android:progress="100"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana3"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana2"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana4"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana3"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana5"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana4"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana6"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana5"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana7"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana6"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana8"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana7"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana9"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana8"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
           
           <ProgressBar
	          android:id="@+id/mana10"
	          style="?android:attr/progressBarStyleHorizontal"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/mana9"
	          android:progressDrawable="@drawable/progressbarstyle"
	          android:paddingBottom="@dimen/progress_padding" />
          
      </RelativeLayout>

    
      <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/view_deck"
       android:id="@+id/deck_button"
       android:onClick="deckButtonClick"
       android:layout_alignParentBottom="true" />
      
       <ImageView
       android:id="@+id/hero_pic"
       android:src="@drawable/ic_launcher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:contentDescription="@string/app_name"
       android:layout_alignParentBottom="true"
       android:layout_toRightOf="@id/deck_button" />
      
      <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/deck_count"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"/>
      
</RelativeLayout>
