<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="5dip" />
      <gradient
        android:startColor="#FF6B2201"
        android:centerY="0.4"
        android:endColor="#FF261004" />
    </shape>
  </item>
  <item android:id="@android:id/progress">
     <clip>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#FFFA5E00"
                android:centerY="0.4"
                android:endColor="#FFFBB900" />
        </shape>
    </clip>
  </item>
</layer-list>
